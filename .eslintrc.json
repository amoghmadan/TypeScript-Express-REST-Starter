{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "airbnb-typescript/base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", 80],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "": "never",
        "ts": "never"
      }
    ]
  }
}
